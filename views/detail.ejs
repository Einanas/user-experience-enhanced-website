    color: #555;
  }

  .toggle-summary {
    background: #dcdcdc;
    color: #000000;
    border: none;
    padding: 10px 20px;
    border-radius: 8px;
    cursor: pointer;
    align-self: center;
  }

  .toggle-summary:hover {
    background: #FF0000;
    color: #333;
