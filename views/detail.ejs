<!-- Detail component -->

<script>
  function toggleSummary() {
    const summary = document.getElementById("summary");
    const button = document.querySelector(".toggle-summary");
    if (summary.style.display === "none") {
      summary.style.display = "block";
      button.textContent = "Toon minder";
    } else {
      summary.style.display = "none";
      button.textContent = "Toon meer";
    }
  }

  // Initially hide the summary
  document.addEventListener("DOMContentLoaded", () => {
    document.getElementById("summary").style.display = "none";
  });
</script>

<body>
  
    <!-- <img src="logo.jpg" alt="Rode Oba Logo" height="200" width="200"> -->
  <h1 class="logo">Oba</h1>
  <!-- <a href="/index.ejs"><button> Home </button></a> -->
  <article class="container">
    <section class="image-section">
      <img
        src="https://fdnd-agency.directus.app/assets/<%= items.afbeelding %>"
        alt="<%= items.title %> cover"
        class="book-image"
      />
      <h1 class="title"><%= items.title %></h1>
    </section>
    <section class="details-section">
      <div class="detail">
        <h2>Auteur</h2>
        <p><%= items.auteur %></p>
      </div>
      <div class="detail">
        <h2>Genre</h2>
        <p><%= items.genre %></p>
      </div>
      <div class="detail">
        <h2>Samenvatting</h2>
        <p id="summary"><%- items.description %></p>
        <button class="toggle-summary" onclick="toggleSummary()">
          Toon meer
        </button>
      </div>
    </section>
  </article>
</body>

<style>
  /* Reset and base styles */
